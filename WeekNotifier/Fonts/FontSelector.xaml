<Window x:Class="WeekNotifier.Fonts.FontSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeekNotifier.Fonts"
        mc:Ignorable="d"
        Title="FontSelector" Height="450" Width="800" ResizeMode="NoResize" ShowInTaskbar="False"
        DataContext="FontSelectorViewModel">

    <Grid>
        <ListBox HorizontalAlignment="Left" Height="266" Margin="100,98,0,0" VerticalAlignment="Top" Width="289" ItemsSource="{Binding FontFamilies}"/>

    </Grid>
</Window>
